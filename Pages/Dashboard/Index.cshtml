@page
@model IndexModel
@{
    ViewData["Title"] = "Panel de Control";
}

<!-- Estilos personalizados -->
<style>
    /* Estilos base mejorados con tamaños optimizados */
    body {
        overflow-x: hidden;
    }
    
    .stats-card {
        border-radius: 16px;
        transition: all 0.3s ease;
        overflow: hidden;
        height: 100%;
    }
    .stats-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 25px rgba(0,0,0,0.1);
    }
    .icon-container {
        border-radius: 50%;
        width: 42px;
        height: 42px;
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .event-card {
        border-radius: 16px;
        transition: all 0.3s ease;
        overflow: hidden;
        height: 100%;
    }
    .event-card:hover {
        transform: translateY(-3px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.12);
    }
    .date-badge {
        border-radius: 12px;
        width: 45px;
    }
    
    /* Eliminar líneas divisorias y mejorar componentes */
    .card {
        border: none !important;
    }
    .card-header {
        background: transparent !important;
        border-bottom: none !important;
        padding-bottom: 0 !important;
    }
    .section-card {
        border-radius: 20px;
        overflow: hidden;
        height: 100%;
    }
    
    /* Mejoras para actividad y recordatorios con tamaños más compactos */
    .activity-item {
        transition: all 0.25s ease;
        border-radius: 12px;
        margin-bottom: 8px;
        background: rgba(255, 255, 255, 0.7);
        padding: 12px !important;
    }
    .activity-item:hover {
        background-color: rgba(255,255,255,1);
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        transform: translateY(-2px);
    }
    .reminder-item {
        border-radius: 12px;
        transition: all 0.25s ease;
        margin-bottom: 8px;
        background: rgba(255, 255, 255, 0.7);
        box-shadow: 0 2px 8px rgba(0,0,0,0.03);
        padding: 12px !important;
    }
    .reminder-item:hover {
        background-color: rgba(255,255,255,1);
        box-shadow: 0 5px 15px rgba(0,0,0,0.07);
        transform: translateY(-2px);
    }
    
    /* Elementos creativos */
    .gradient-bg {
        background: linear-gradient(120deg, rgba(79, 70, 229, 0.03) 0%, rgba(16, 185, 129, 0.02) 100%);
    }
    .glass-effect {
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.8);
    }
    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 16px;
        font-size: 1.1rem;
    }
    .section-title:after {
        content: '';
        position: absolute;
        bottom: -6px;
        left: 0;
        width: 35px;
        height: 3px;
        background: linear-gradient(90deg, var(--primary-color), rgba(79, 70, 229, 0.5));
        border-radius: 3px;
    }
    
    /* Optimización de espaciados generales */
    .compact-padding {
        padding: 1.25rem !important;
    }
    .compact-row {
        margin-bottom: 1rem !important;
    }
    .card-body h3 {
        font-size: 1.5rem;
    }
    .compact-margins {
        margin-bottom: 0.6rem;
    }
    .btn-sm {
        padding: 0.25rem 0.75rem;
    }
</style>

<!-- Contenido con espaciados reducidos -->
