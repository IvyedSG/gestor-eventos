    .circular-chart {
        display: block;
        width: 100%;
        height: 100%;
    }
    
    .circle-bg {
        fill: none;
        stroke: #eee;
        stroke-width: 2.8;
    }
    
    .circle {
        fill: none;
        stroke-width: 2.8;
        stroke-linecap: round;
    }
    
    .percentage {
        fill: #666;
