@page
@model IndexModel
@{
    ViewData["Title"] = "Panel de Control";
}

<div class="content-header">
    <div>
        <h1 class="page-title">Panel de Control</h1>
        <p class="text-muted">Bienvenido al sistema de gestión de eventos</p>
    </div>
    <div>
        <button class="btn btn-primary" type="button">
            <i class="bi bi-plus"></i> Nuevo evento
        </button>
    </div>
</div>

<!-- Estadísticas generales -->
<div class="row g-4 mb-4">
    <div class="col-lg-3 col-md-6">
        <div class="card border-0">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-primary bg-opacity-10 p-2 rounded">
                        <i class="bi bi-calendar-event text-primary fs-4"></i>
                    </div>
                    <span class="badge bg-success fs-6">+24%</span>
                </div>
                <h3 class="fw-bold mb-1">42</h3>
                <p class="text-muted mb-0">Eventos este mes</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card border-0">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-success bg-opacity-10 p-2 rounded">
                        <i class="bi bi-people text-success fs-4"></i>
                    </div>
                    <span class="badge bg-success fs-6">+12%</span>
                </div>
                <h3 class="fw-bold mb-1">124</h3>
                <p class="text-muted mb-0">Clientes activos</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card border-0">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-info bg-opacity-10 p-2 rounded">
                        <i class="bi bi-bookmark-check text-info fs-4"></i>
                    </div>
                    <span class="badge bg-info fs-6">+18%</span>
                </div>
                <h3 class="fw-bold mb-1">28</h3>
                <p class="text-muted mb-0">Reservas pendientes</p>
            </div>
        </div>
    </div>
    <div class="col-lg-3 col-md-6">
        <div class="card border-0">
            <div class="card-body p-4">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="bg-warning bg-opacity-10 p-2 rounded">
                        <i class="bi bi-currency-dollar text-warning fs-4"></i>
                    </div>
                    <span class="badge bg-success fs-6">+32%</span>
                </div>
                <h3 class="fw-bold mb-1">$45,850</h3>
                <p class="text-muted mb-0">Ingresos del mes</p>
            </div>
        </div>
    </div>
</div>

<!-- Accesos rápidos -->
<div class="row g-4 mb-4">
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 bg-primary text-white">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="p-2 bg-white bg-opacity-25 rounded-circle me-3">
                        <i class="bi bi-calendar-event"></i>
                    </div>
                    <h5 class="card-title mb-0">Eventos</h5>
                </div>
                <p class="card-text opacity-75">Gestiona todos tus eventos y personaliza cada detalle</p>
                <a href="/Events" class="btn btn-sm btn-light">
                    Administrar <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 bg-success text-white">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="p-2 bg-white bg-opacity-25 rounded-circle me-3">
                        <i class="bi bi-people"></i>
                    </div>
                    <h5 class="card-title mb-0">Clientes</h5>
                </div>
                <p class="card-text opacity-75">Administra tu cartera de clientes y mantén contacto</p>
                <a href="/Clients" class="btn btn-sm btn-light">
                    Administrar <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 bg-info text-white">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="p-2 bg-white bg-opacity-25 rounded-circle me-3">
                        <i class="bi bi-bookmark-check"></i>
                    </div>
                    <h5 class="card-title mb-0">Reservas</h5>
                </div>
                <p class="card-text opacity-75">Control de reservas, disponibilidad y fechas</p>
                <a href="/Reserves" class="btn btn-sm btn-light">
                    Administrar <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
    <div class="col-md-6 col-lg-3">
        <div class="card border-0 bg-warning">
            <div class="card-body p-4">
                <div class="d-flex align-items-center mb-3">
                    <div class="p-2 bg-dark bg-opacity-10 rounded-circle me-3">
                        <i class="bi bi-person-badge"></i>
                    </div>
                    <h5 class="card-title mb-0">Usuarios</h5>
                </div>
                <p class="card-text opacity-75">Gestiona el equipo de trabajo y sus permisos</p>
                <a href="/Users" class="btn btn-sm btn-dark">
                    Administrar <i class="bi bi-arrow-right ms-1"></i>
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Próximos eventos y tareas -->
<div class="row g-4">
    <div class="col-md-6">
        <div class="card border-0">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Próximos Eventos</h5>
                <a href="/Events" class="btn btn-sm btn-outline-primary">Ver todos</a>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item border-0 py-3 px-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-primary bg-opacity-10 text-primary p-3 rounded me-3 text-center" style="width: 60px">
                                <span class="d-block fw-bold">8</span>
                                <span>Abr</span>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Boda García-Pérez</h6>
                                <p class="text-muted mb-0"><i class="bi bi-geo-alt me-1"></i>Salón Diamante, 150 personas</p>
                            </div>
                            <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary">Confirmado</span>
                        </div>
                    </li>
                    <li class="list-group-item border-0 py-3 px-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-info bg-opacity-10 text-info p-3 rounded me-3 text-center" style="width: 60px">
                                <span class="d-block fw-bold">15</span>
                                <span>Abr</span>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Conferencia Tech 2025</h6>
                                <p class="text-muted mb-0"><i class="bi bi-geo-alt me-1"></i>Centro de Convenciones, 300 personas</p>
                            </div>
                            <span class="badge rounded-pill bg-warning bg-opacity-10 text-warning">Pendiente</span>
                        </div>
                    </li>
                    <li class="list-group-item border-0 py-3 px-4">
                        <div class="d-flex align-items-center">
                            <div class="bg-success bg-opacity-10 text-success p-3 rounded me-3 text-center" style="width: 60px">
                                <span class="d-block fw-bold">22</span>
                                <span>Abr</span>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Cumpleaños Empresarial</h6>
                                <p class="text-muted mb-0"><i class="bi bi-geo-alt me-1"></i>Terraza Mirador, 75 personas</p>
                            </div>
                            <span class="badge rounded-pill bg-primary bg-opacity-10 text-primary">Confirmado</span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="col-md-6">
        <div class="card border-0">
            <div class="card-header bg-white d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Tareas Pendientes</h5>
                <button class="btn btn-sm btn-outline-primary">Añadir tarea</button>
            </div>
            <div class="card-body p-0">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item border-0 py-3 px-4">
                        <div class="form-check d-flex align-items-center gap-3">
                            <input class="form-check-input" type="checkbox" id="task1" style="transform: scale(1.2);">
                            <div class="flex-grow-1">
                                <label class="form-check-label fw-medium" for="task1">
                                    Confirmar catering Boda García-Pérez
                                </label>
                                <p class="text-muted mb-0 small"><i class="bi bi-calendar me-1"></i>Fecha límite: 6 de abril</p>
                            </div>
                            <span class="badge bg-danger">Alta</span>
                        </div>
                    </li>
                    <li class="list-group-item border-0 py-3 px-4">
                        <div class="form-check d-flex align-items-center gap-3">
                            <input class="form-check-input" type="checkbox" id="task2" style="transform: scale(1.2);">
                            <div class="flex-grow-1">
                                <label class="form-check-label fw-medium" for="task2">
                                    Enviar contrato Conferencia Tech 2025
                                </label>
                                <p class="text-muted mb-0 small"><i class="bi bi-calendar me-1"></i>Fecha límite: 10 de abril</p>
                            </div>
                            <span class="badge bg-warning text-dark">Media</span>
                        </div>
                    </li>
                    <li class="list-group-item border-0 py-3 px-4">
                        <div class="form-check d-flex align-items-center gap-3">
                            <input class="form-check-input" type="checkbox" id="task3" style="transform: scale(1.2);">
                            <div class="flex-grow-1">
                                <label class="form-check-label fw-medium" for="task3">
                                    Coordinar proveedores cumpleaños empresarial
                                </label>
                                <p class="text-muted mb-0 small"><i class="bi bi-calendar me-1"></i>Fecha límite: 15 de abril</p>
                            </div>
                            <span class="badge bg-warning text-dark">Media</span>
                        </div>
                    </li>
                    <li class="list-group-item border-0 py-3 px-4">
                        <div class="form-check d-flex align-items-center gap-3">
                            <input class="form-check-input" type="checkbox" id="task4" style="transform: scale(1.2);">
                            <div class="flex-grow-1">
                                <label class="form-check-label fw-medium" for="task4">
                                    Realizar seguimiento a clientes potenciales
                                </label>
                                <p class="text-muted mb-0 small"><i class="bi bi-calendar me-1"></i>Fecha límite: 20 de abril</p>
                            </div>
                            <span class="badge bg-info">Baja</span>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>