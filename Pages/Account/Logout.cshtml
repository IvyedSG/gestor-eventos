@page
@model GestorEventos.Pages.Account.LogoutModel
@{
    ViewData["Title"] = "Cerrando sesión...";
}

<div class="text-center">
    <div class="spinner-border text-primary mb-4" role="status">
        <span class="visually-hidden">Cerrando sesión...</span>
    </div>
    <h4>Cerrando sesión...</h4>
    <p>Estás siendo redirigido.</p>
</div>

<script>
    // Redireccionar automáticamente luego de que se complete el logout
    setTimeout(function() {
        window.location.href = '/Account/Login';
    }, 1500);
</script>