@model gestor_eventos.Pages.Servicios.IndexModel

<div class="row mb-4">
    <div class="col-md-4 mb-3 mb-md-0">
        <form id="searchForm" method="get" class="d-flex">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Buscar servicios..." 
                       id="searchInput" name="SearchTerm" value="@Model.SearchTerm">
                <button class="btn btn-primary" type="submit">
                    <i class="bi bi-search"></i>
                </button>
                @if (!string.IsNullOrEmpty(Model.SearchTerm))
                {
                    <button type="button" class="btn btn-outline-secondary" id="clearSearchBtn">
                        <i class="bi bi-x-lg"></i>
                    </button>
                }
            </div>
        </form>
    </div>
    <div class="col-md-4">
        <div class="d-flex align-items-center">
            <label for="eventTypeFilter" class="me-2 text-nowrap">Tipo de evento:</label>
            <select id="eventTypeFilter" class="form-select">
                <option value="" selected>Todos</option>
                <option value="Conferencia">Conferencia</option>
                <option value="Taller">Taller (Workshop)</option>
                <option value="Seminario">Seminario</option>
                <option value="Concierto">Concierto</option>
                <option value="Festival">Festival</option>
                <option value="Webinar">Webinar</option>
                <option value="Reunión de negocios">Reunión de negocios</option>
                <option value="Feria o Expo">Feria o Expo</option>
                <option value="Evento deportivo">Evento deportivo</option>
                <option value="Evento social">Evento social</option>
            </select>
        </div>
    </div>
    <div class="col-md-4 text-end">
        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#newServiceModal">
            <i class="bi bi-plus-circle me-1"></i> Nuevo servicio
        </button>
    </div>
</div>