@page
@model GestorEventos.Pages.Auth.AccessDeniedModel
@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body text-center p-5">
                    <i class="bi bi-exclamation-triangle text-warning" style="font-size: 4rem;"></i>
                    <h2 class="mt-3">Acceso Denegado</h2>
                    <p class="text-muted">No tienes permiso para acceder a este recurso.</p>
                    <a asp-page="/Index" class="btn btn-primary mt-3">Volver al inicio</a>
                </div>
            </div>
        </div>
    </div>
</div>