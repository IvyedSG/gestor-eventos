@model gestor_eventos.Pages.Reservas.IndexModel

<div class="card border-0 shadow-sm">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="bg-light">
                    <tr>
                        <th class="ps-4">Nombre del evento</th>
                        <th>Nombre del cliente</th>
                        <th>Correo electrónico</th>
                        <th>Fecha</th>
                        <th>Hora</th>
                        <th>Precio total</th>
                        <th>Tipo de evento</th>
                        <th>Estado</th>
                        <th class="text-end pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Reservations != null && Model.Reservations.Any())
                    {
                        foreach (var reservation in Model.Reservations)
                        {
                            <tr>
                                <td class="ps-4 fw-medium">@reservation.EventName</td>
                                <td>@reservation.ClientName</td>
                                <td>@reservation.ClientEmail</td>
                                <td>@reservation.Date.ToString("dd/MM/yyyy")</td>
                                <td>@reservation.Time</td>
                                <td>$@reservation.Amount.ToString("N0")</td>
                                <td>@reservation.EventType</td>
                                <td>
                                    @{
                                        var status = reservation.Status.ToUpper();
                                        
                                        if (status == "CONFIRMADA" || status == "CONFIRMED")
                                        {
                                            <span class="badge bg-success bg-opacity-10 text-success px-3 py-2 rounded-pill">
                                                <i class="bi bi-check-circle me-1"></i>Confirmada
                                            </span>
                                        }
                                        else if (status == "PENDIENTE" || status == "PENDING")
                                        {
                                            <span class="badge bg-warning bg-opacity-10 text-warning px-3 py-2 rounded-pill">
                                                <i class="bi bi-clock me-1"></i>Pendiente
                                            </span>
                                        }
                                        else if (status == "CANCELADA" || status == "CANCELED" || status == "CANCELLED")
                                        {
                                            <span class="badge bg-danger bg-opacity-10 text-danger px-3 py-2 rounded-pill">
                                                <i class="bi bi-x-circle me-1"></i>Cancelada
                                            </span>
                                        }
                                        else if (status == "FINALIZADA" || status == "COMPLETED" || status == "FINISHED")
                                        {
                                            <span class="badge bg-secondary bg-opacity-10 text-secondary px-3 py-2 rounded-pill">
                                                <i class="bi bi-flag me-1"></i>Finalizada
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info bg-opacity-10 text-info px-3 py-2 rounded-pill">
                                                <i class="bi bi-info-circle me-1"></i>@reservation.Status
                                            </span>
                                        }
                                    }
                                </td>
                                <td class="text-end pe-4">
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-secondary" title="Ver detalles" data-bs-toggle="modal" data-bs-target="#viewReservationModal" data-reservation-id="@reservation.Id">
                                            <i class="bi bi-eye"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-primary" title="Editar" 
                                                data-bs-toggle="modal" 
                                                data-bs-target="#editReservationModal" 
                                                data-reservation-id="@reservation.Id">
                                            <i class="bi bi-pencil"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-success" title="Imprimir"
                                                data-bs-toggle="modal"
                                                data-bs-target="#printReservationModal"
                                                data-reservation-id="@reservation.Id">
                                            <i class="bi bi-printer"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="9" class="text-center py-4">
                                <div class="d-flex flex-column align-items-center py-5">
                                    <i class="bi bi-calendar-x text-muted" style="font-size: 3rem;"></i>
                                    <h5 class="mt-3">No se encontraron reservas</h5>
                                    <p class="text-muted mb-4">Prueba ajustando los filtros o crea una nueva reserva</p>
                                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#newReservationModal">
                                        <i class="bi bi-plus-circle me-2"></i>Nueva Reserva
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Paginación -->
@if (Model.Reservations != null && Model.Reservations.Any())
{
    <div class="d-flex justify-content-between align-items-center mt-4">
        <p class="text-muted">Mostrando <strong>@Model.Reservations.Count</strong> reservas</p>
        <nav>
            <ul class="pagination">
                <li class="page-item disabled">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
}