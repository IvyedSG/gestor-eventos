@page
@model gestor_eventos.Pages.Usuario.PerfilModel
@{
    ViewData["Title"] = "Mi Perfil";
}

<div class="profile-container">
    <div class="text-center mb-4">
        <div class="profile-avatar">
            @{
                var userName = Model.Input.Nombre?.Substring(0, 1) ?? "U";
                var userLastName = Model.Input.Apellido?.Substring(0, 1) ?? "";
                var initials = (userName + userLastName).ToUpper();
            }
            @initials
        </div>
        <h2 class="mt-3 mb-0">@Model.Input.Nombre @Model.Input.Apellido</h2>
        <p class="text-muted">@Model.Input.Email</p>
    </div>

    @if (!string.IsNullOrEmpty(Model.StatusMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @Model.StatusMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="profile-card">
        <div class="d-flex justify-content-end mb-3">
            <button id="btnEditarPerfil" type="button" class="btn btn-outline-secondary btn-sm">
                <i class="bi bi-pencil"></i> Editar perfil
            </button>
            <button id="btnCancelarEdicion" type="button" class="btn btn-outline-danger btn-sm ms-2" style="display: none;">
                <i class="bi bi-x"></i> Cancelar
            </button>
        </div>

        <!-- Vista modo lectura -->
        <div id="viewMode">
            <div class="row mb-4">
                <div class="col-md-6">
                    <p class="profile-label">Nombre</p>
                    <p class="profile-value">@Model.Input.Nombre</p>
                </div>
                <div class="col-md-6">
                    <p class="profile-label">Apellido</p>
                    <p class="profile-value">@Model.Input.Apellido</p>
                </div>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <p class="profile-label">Teléfono</p>
                    <p class="profile-value">@Model.Input.Telefono</p>
                </div>
                <div class="col-md-6">
                    <p class="profile-label">Correo electrónico</p>
                    <p class="profile-value">@Model.Input.Email</p>
                </div>
            </div>
        </div>

        <!-- Formulario modo edición -->
        <form id="editMode" method="post" style="display: none;">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Input.Nombre" class="form-label"></label>
                    <input asp-for="Input.Nombre" class="form-control" placeholder="Tu nombre" />
                    <span asp-validation-for="Input.Nombre" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Apellido" class="form-label"></label>
                    <input asp-for="Input.Apellido" class="form-control" placeholder="Tu apellido" />
                    <span asp-validation-for="Input.Apellido" class="text-danger"></span>
                </div>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <label asp-for="Input.Telefono" class="form-label"></label>
                    <input asp-for="Input.Telefono" class="form-control" placeholder="Tu número de teléfono" />
                    <span asp-validation-for="Input.Telefono" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Input.Email" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Input.Email" class="form-control" readonly />
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary px-4">
                    <i class="bi bi-check2 me-1"></i> Guardar cambios
                </button>
            </div>
        </form>
    </div>

    <!-- Estilos para el mensaje final estilizado -->
    <div class="signature-card text-center mt-4">
        <div class="signature-content">
            <i class="bi bi-stars signature-icon"></i>
            <p class="signature-text">Gracias por elegir <span class="brand-highlight">Eventus</span></p>
            <p class="signature-tagline">Nuestra misión es hacer de tus eventos maravillas</nav></p>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .profile-container {
            max-width: 800px;
            margin: 0 auto;
            padding: 30px 20px;
        }
        
        .profile-avatar {
            width: 120px;
            height: 120px;
            border-radius: 50%;
            background-color: var(--primary-color);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 42px;
            font-weight: bold;
            margin: 0 auto;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.2);
        }
        
        .profile-card {
            background-color: white;
            border-radius: 16px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
            margin: 0 auto;
        }
        
        .tips-card {
            background-color: #FEF9C3;
            padding: 15px;
            border-radius: 12px;
            font-size: 14px;
            color: #854D0E;
        }
        
        /* Estilos para el modo vista */
        .profile-label {
            font-size: 14px;
            color: #6B7280;
            margin-bottom: 4px;
            font-weight: 500;
        }
        
        .profile-value {
            font-size: 16px;
            color: #111827;
            margin-bottom: 0;
        }
        
        /* Estilos para el modo edición */
        .form-control {
            border-radius: 8px;
            padding: 10px 15px;
            border: 1px solid #E5E7EB;
            background-color: #F9FAFB;
        }
        
        .form-control:focus {
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.15);
            border-color: var(--primary-color);
        }
        
        .form-label {
            font-weight: 500;
            font-size: 14px;
            color: #4B5563;
        }
        
        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            border-radius: 8px;
            padding: 10px 20px;
            transition: all 0.2s;
        }
        
        .btn-primary:hover {
            background-color: var(--primary-dark);
            transform: translateY(-1px);
        }

        /* Estilos para el mensaje final estilizado */
        .signature-card {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            border-radius: 16px;
            padding: 20px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.05);
            border-top: 3px solid var(--primary-color);
        }

        .signature-content {
            padding: 10px;
            position: relative;
        }

        .signature-icon {
            color: var(--primary-color);
            font-size: 22px;
            margin-bottom: 10px;
            display: inline-block;
            animation: pulse 2s infinite;
        }

        .signature-text {
            font-size: 18px;
            font-weight: 500;
            color: #343a40;
            margin-bottom: 5px;
        }

        .signature-tagline {
            font-size: 14px;
            color: #6c757d;
            font-style: italic;
            margin-bottom: 0;
        }

        .brand-highlight {
            color: var(--primary-color);
            font-weight: 700;
            letter-spacing: 0.5px;
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
            }
            50% {
                transform: scale(1.1);
            }
            100% {
                transform: scale(1);
            }
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Cambiar entre modo vista y modo edición
            $("#btnEditarPerfil").click(function() {
                $("#viewMode").hide();
                $("#editMode").show();
                $("#btnEditarPerfil").hide();
                $("#btnCancelarEdicion").show();
            });
            
            // Cancelar edición
            $("#btnCancelarEdicion").click(function() {
                $("#editMode").hide();
                $("#viewMode").show();
                $("#btnCancelarEdicion").hide();
                $("#btnEditarPerfil").show();
            });
        });
    </script>
}