@model gestor_eventos.Pages.Pagos.IndexModel

<div class="modal fade" id="editPaymentModal" tabindex="-1" aria-labelledby="editPaymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light">
                <h5 class="modal-title" id="editPaymentModalLabel">
                    <i class="bi bi-pencil-square me-2 text-primary"></i>Editar Pago
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editPaymentForm">
                    <input type="hidden" id="editPaymentId">
                    
                    <div class="mb-4">
                        <label class="form-label">Reserva</label>
                        <div class="form-control-plaintext d-flex align-items-center">
                            <i class="bi bi-calendar-event text-primary me-2"></i>
                            <span id="editReservationName" class="fw-medium">Nombre de la reserva</span>
                        </div>
                        <div class="form-text">No se puede cambiar la reserva asociada al pago</div>
                    </div>
                    
                    <div class="mb-4">
                        <label for="editPaymentType" class="form-label">Tipo de Pago <span class="text-danger">*</span></label>
                        <select class="form-select" id="editTipoPago" required>
                            <option value="">Seleccionar tipo de pago</option>
                            @foreach (var tipoPago in Model.TiposPago)
                            {
                                <option value="@tipoPago.Id">@tipoPago.Nombre</option>
                            }
                        </select>
                    </div>
                    
                    <div class="mb-4">
                        <label for="editAmount" class="form-label">Monto <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <span class="input-group-text">S/</span>
                            <input type="number" class="form-control" id="editAmount" min="0.01" step="0.01" required placeholder="0.00">
                        </div>
                        <div class="form-text">Ingrese el monto del pago en soles</div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="saveEditPayment">
                    <i class="bi bi-save me-1"></i>Guardar Cambios
                </button>
            </div>
        </div>
    </div>
</div>
