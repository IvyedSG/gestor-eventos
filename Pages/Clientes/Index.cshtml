@page
@model gestor_eventos.Pages.Clientes.IndexModel
@{
    ViewData["Title"] = "Clientes";
}

<div class="container-fluid py-4">

    <!-- Pasar el modelo a los partials -->
    <partial name="Partials/_FiltersSection" model="Model" />

    <partial name="Partials/_ClientsTable" model="Model" />

    <partial name="Partials/_PaginationSection" model="Model" />

    <!-- Modales - estos no necesitan el modelo -->
    <partial name="Partials/_NewClientModal" />
    <partial name="Partials/_EditClientModal" />
    <partial name="Partials/_ViewClientModal" />
    <partial name="Partials/_DeleteClientModal" />

    <!-- Mensaje de error -->
    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            @Model.ErrorMessage
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
</div>

@section Scripts {
    <script type="module" src="~/js/clientes/main.js"></script>
}