@model gestor_eventos.Pages.Clientes.IndexModel

<!-- Modal para Editar Cliente -->
<div class="modal fade" id="editClientModal" tabindex="-1" aria-labelledby="editClientModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editClientModalLabel">
                    <i class="bi bi-person-gear me-2"></i>Editar Cliente
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="editClientForm">
                    <input type="hidden" id="editClientId">
                    
                    <!-- Tipo de Cliente -->
                    <div class="mb-4">
                        <label class="form-label fw-bold">Tipo de Cliente <span class="text-danger">*</span></label>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="editClientType" id="editIndividualClient" value="Individual">
                                    <label class="form-check-label" for="editIndividualClient">
                                        <i class="bi bi-person me-2"></i>Individual
                                    </label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="editClientType" id="editCompanyClient" value="Empresa">
                                    <label class="form-check-label" for="editCompanyClient">
                                        <i class="bi bi-building me-2"></i>Empresa
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información Básica -->
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editClientName" class="form-label" id="editNameLabel">Nombre completo <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="editClientName" required>
                            <div class="invalid-feedback"></div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editClientEmail" class="form-label">Correo electrónico <span class="text-danger">*</span></label>
                            <input type="email" class="form-control" id="editClientEmail" required>
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="editClientPhone" class="form-label">Teléfono <span class="text-danger">*</span></label>
                            <input type="tel" class="form-control" id="editClientPhone" required 
                                   placeholder="123456789" maxlength="9" 
                                   pattern="[0-9]{9}" title="Debe contener exactamente 9 dígitos">
                            <div class="invalid-feedback"></div>
                            <div class="form-text">Solo números, 9 dígitos</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="editClientAddress" class="form-label">Dirección</label>
                            <input type="text" class="form-control" id="editClientAddress">
                            <div class="invalid-feedback"></div>
                        </div>
                    </div>

                    <!-- Información de Empresa -->
                    <div class="edit-company-field" style="display: none;">
                        <hr class="my-4">
                        <h6 class="mb-3">Información de la Empresa</h6>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="editClientRuc" class="form-label">RUC <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="editClientRuc" 
                                       placeholder="12345678901" maxlength="11" 
                                       pattern="[0-9]{11}" title="Debe contener exactamente 11 dígitos">
                                <div class="invalid-feedback"></div>
                                <div class="form-text">Solo números, 11 dígitos</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="editClientRazonSocial" class="form-label">Razón Social <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="editClientRazonSocial">
                                <div class="invalid-feedback"></div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="saveEditClient">
                    <i class="bi bi-save me-1"></i>Guardar Cambios
                </button>
            </div>
        </div>
    </div>
</div>